<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".BusquedaAvanzadaActivity" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:background="@drawable/background"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblNombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carta_nombre"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etxtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_transparent"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblSet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carta_set"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etxtSet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_transparent"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblTipo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carta_tipo"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etxtTipo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_transparent"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblRareza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carta_rareza"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/ckbRarezaC"
                        style="?android:attr/starStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/rareza_c"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/ckbRarezaU"
                        style="?android:attr/starStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/rareza_u"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/ckbRarezaR"
                        style="?android:attr/starStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/rareza_r"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/ckbRarezaM"
                        style="?android:attr/starStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/rareza_m"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/ckbRarezaT"
                        style="?android:attr/starStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="@string/rareza_t"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/lblColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/carta_color"
                        android:textColor="@color/white" />

                    <Spinner
                        android:id="@+id/spinColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/ckbColorBlanco"
                        style="?android:attr/starStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/color_blanco"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/ckbColorNegro"
                        style="?android:attr/starStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/color_negro"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/ckbColorAzul"
                        style="?android:attr/starStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/color_azul"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/ckbColorVerde"
                        style="?android:attr/starStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/color_verde"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/ckbColorRojo"
                        style="?android:attr/starStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/color_rojo"
                        android:textColor="@color/white" />

                    <CheckBox
                        android:id="@+id/ckbColorIncoloro"
                        style="?android:attr/starStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/color_incoloro"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblCosteMana"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carta_coste_mana"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etxtCosteMana"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_transparent"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblCosteManaConvertido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carta_coste_mana_convertido"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/spinComparacionCosteManaConvertido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:gravity="center_vertical" />

                    <Spinner
                        android:id="@+id/spinCosteManaConvertido"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblPoder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carta_poder"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/spinComparacionPoder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:gravity="center_vertical" />

                    <Spinner
                        android:id="@+id/spinPoder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblDefensa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carta_defensa"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/spinComparacionDefensa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:gravity="center_vertical" />

                    <Spinner
                        android:id="@+id/spinDefensa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblLealtad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carta_lealtad"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <Spinner
                        android:id="@+id/spinComparacionLealtad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:gravity="center_vertical" />

                    <Spinner
                        android:id="@+id/spinLealtad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@null"
                        android:gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblHabilidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carta_habilidad"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etxtHabildad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_transparent"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblCita"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carta_cita"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etxtCita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_transparent"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblArtista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carta_artista"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etxtArtista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_transparent"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <TextView
                android:id="@+id/lblRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carta_rating"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lblReglas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carta_reglas"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:id="@+id/etxtReglas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_transparent"
                    android:textCursorDrawable="@null" />

                <TextView
                    android:id="@+id/lblManaGenerado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carta_mana_generado"
                    android:textColor="@color/white" />
            </LinearLayout>

            <TextView
                android:id="@+id/lblPrecioBajo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carta_precio_bajo"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lblPrecioMedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carta_precio_medio"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lblPrecioAlto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carta_precio_alto"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblNombreOtroIdioma"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/carta_nombre_otro_idioma"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etxtNombreOtroIdioma"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textColorHint="@color/gray_transparent"
                    android:textCursorDrawable="@null" />
            </LinearLayout>

            <TextView
                android:id="@+id/lblLegalidadBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carta_legalidad_block"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lblLegalidadStandard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carta_legalidad_standard"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lblLegalidadExtended"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carta_legalidad_extended"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lblLegalidadModern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carta_legalidad_modern"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lblLegalidadLegacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carta_legalidad_legacy"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lblLegalidadVintage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carta_legalidad_vintage"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lblLegalidadHighlander"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carta_legalidad_highlander"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lblLegalidadFrenchCommander"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carta_legalidad_french_commander"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lblLegalidadCommander"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carta_legalidad_commander"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lblLegalidadPeasant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carta_legalidad_peasant"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/lblLegalidadPauper"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carta_legalidad_pauper"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

    <io.github.danigt91.cardbuilder.view.MyButton
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:text="@string/buscar" />

</LinearLayout>